pipeline {
    agent any
    environment {
        registry = '768362009725.dkr.ecr.us-east-1.amazonaws.com/capstone_udacity_project/CapstoneProject'
    }
    stages {
    
        stage("lint HTML") {
           steps {
                sh "docker build -t CapstoneProject ."
            }
        }
    
        stage("Docker Build") {
            steps {
                sh "docker build -t CapstoneProject ."
            }
        }
        stage("ECR Login") {
            steps {
                withAWS(credentials:'aws-credential') {
                    script {
                        def login = ecrLogin()
                        sh "${login}"
                    }
                }
            }
        }
        stage("Docker Push") {
            steps {
                sh "docker push ${registry}"
            }
        }
    }
    post {
        success {
            echo 'ending'
            build job: 'TestJob-CD'
        }
    }
}
