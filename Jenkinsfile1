pipeline {
    agent any
    stages {
        stage('Lint HTML') {
            steps {
                
                sh 'tidy -q -e *.html'
 
            }
            
        }
          stage('deploy on docker') {
            agent {
                docker { image 'maven:3-alpine' }
            }
            steps {
                sh 'mvn --version'
            }
        }
    }
}
